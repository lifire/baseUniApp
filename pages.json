{
	"easycom":{
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "十分学堂",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/advertising/advertising",
			"style": {
				"navigationBarTitleText": "推广"
			}
		},
		{
			"path": "pages/mine/mine",
			"style": {
				"navigationBarTitleText": "我的"
			}
		},
		{
			"path": "pages/course/courseList",
			"style": {
				"navigationBarTitleText": "课程列表"
			}
		},
		{
			"path": "pages/course/courseDetails",
			"style": {
				"navigationBarTitleText": "课程详情"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#777",
		"selectedColor": "#000",
		"borderStyle": "black",
		"backgroundColor": "#FFFFFF",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/home.png",
				"selectedIconPath": "static/homeHL.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/advertising/advertising",
				"iconPath": "./static/advertising.png",
				"selectedIconPath": "static/advertisingHL.png",
				"text": "推广"
			}, {
				"pagePath": "pages/mine/mine",
				"iconPath": "static/mine.png",
				"selectedIconPath": "static/mine.png",
				"text": "我的"
			}
		]
	}
}
